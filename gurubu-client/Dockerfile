ARG RUNTIME_IMAGE=node:20-alpine

FROM $RUNTIME_IMAGE

WORKDIR /app

COPY package*.json ./

RUN yarn

COPY . .

ARG API_URL
ENV NEXT_PUBLIC_API_URL=$API_URL

ARG STORY_POINT_CUSTOM_FIELD
ENV NEXT_PUBLIC_STORY_POINT_CUSTOM_FIELD=$STORY_POINT_CUSTOM_FIELD

ARG JIRA_URL
ENV NEXT_PUBLIC_JIRA_URL=$JIRA_URL

RUN yarn build

EXPOSE 3000

CMD [ "yarn", "start" ]
